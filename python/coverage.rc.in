# .coveragerc to control coverage.py
[run]
branch = True

# include the unittest source files and source files in installed modules
source = @PYMESS_OUTPUT_DIR@
         pymess



omit = *__init__*


[report]
precision = 2


[html]
title = "Coverage Report for Py-M.E.S.S."
directory = source = @PYMESS_OUTPUT_DIR@/coverage

